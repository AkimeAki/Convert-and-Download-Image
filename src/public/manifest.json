{
	"manifest_version": 3,
	"name": "拡張子を変更して画像を保存",
	"version": "2.2.2",
	"description": "画像の拡張子（フォーマット）を変換した上で保存することができます。",
	"action": {
		"default_title": "Convert and Download Image",
		"default_popup": "./popup/popup.html"
	},
	"icons": {
		"128": "./icons/icon128.png"
	},
	"background": {
		"service_worker": "./background.js",
		"type": "module"
	},
	"permissions": ["activeTab", "scripting", "contextMenus"],
	"host_permissions": ["<all_urls>"]
}
